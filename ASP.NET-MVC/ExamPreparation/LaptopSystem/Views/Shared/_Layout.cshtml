<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/kendoui")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                @(Html.Kendo().Menu()
                .Name("kendomenu")
                .Items(items =>
                {
                    items.Add().Text("Home").Action("Index", "Home", new { area = "" });
                    items.Add().Text("List Page").Action("ListPage", "Home", new { area = "" });
                    items.Add().Text("Laptops").Action("Index", "Laptops", new { area = "Administration" });
                    if (User.IsInRole("Admin"))
                    {
                        items.Add().Text("Manufacturers").Action("Index", "Manufacturers", new { area = "Administration" });
                        items.Add().Text("Comments").Action("Index", "Comments", new { area = "Administration" });
                        
                    }
                })
                .HtmlAttributes(new { id = "kendo-menu" })
                )
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>



    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
